<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/navigation_gallery">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.tinktest.sotiris.ui.MainActivity"
        android:label="MainActivity"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/navigation_gallery"
        android:name="com.tinktest.sotiris.ui.gallery.GalleryFragment"
        android:label="Posts"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/navigation_details"
        android:name="com.tinktest.sotiris.ui.details.DetailsFragment"
        android:label="Details"
        tools:layout="@layout/fragment_details" />

    <action
        android:id="@+id/action_nav_to_details"
        app:destination="@id/navigation_details" />

</navigation>
